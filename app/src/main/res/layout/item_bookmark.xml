<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/general_spacing_16dp">

    <ImageView
        android:id="@+id/iv_bookmark_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_bookmark_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        tools:text="Константин Константинов"
        android:textStyle="bold"
        android:textColor="@color/colorProfileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_bookmark_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bookmark_item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        tools:text="18 декабря 23:23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_bookmark_item_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_item_name" />

    <TextView
        android:id="@+id/tv_bookmark_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_spacing_4dp"
        android:layout_marginEnd="8dp"
        tools:text="Текст какой-то тестовый для верстки самой лучшей верстки на свете"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_bookmark_item_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_item_date" />

    <ImageView
        android:id="@+id/iv_bookmark_item_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_bookmark_item_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookmark_item_text"
        tools:srcCompat="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_bookmark_item_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="100"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:drawableLeft="@drawable/ic_general_like_red"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="@+id/iv_bookmark_item_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_bookmark_item_image" />

    <TextView
        android:id="@+id/tv_bookmark_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        tools:text="99"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:drawableLeft="@drawable/ic_general_comment_blue"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bookmark_item_like"
        app:layout_constraintEnd_toStartOf="@+id/tv_bookmark_item_repost"
        app:layout_constraintStart_toEndOf="@+id/tv_bookmark_item_like" />

    <TextView
        android:id="@+id/tv_bookmark_item_repost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        tools:text="99"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:drawableLeft="@drawable/ic_general_repost_blue"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bookmark_item_comment"
        app:layout_constraintEnd_toEndOf="@+id/iv_bookmark_item_image" />
</androidx.constraintlayout.widget.ConstraintLayout>