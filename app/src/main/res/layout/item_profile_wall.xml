<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_wall_reposted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="@dimen/general_spacing_8dp"
        android:gravity="center_vertical"
        android:text="Репост"
        android:drawableLeft="@drawable/ic_general_reposted"
        android:drawablePadding="@dimen/general_spacing_8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_wall_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_wall_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            tools:text="Константин Константинов"
            android:textStyle="bold"
            android:textColor="@color/colorProfileName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_wall_avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wall_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            tools:text="18 декабря 23:23"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_wall_item_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_wall_item_name" />

        <TextView
            android:id="@+id/tv_wall_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="100"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:drawableLeft="@drawable/ic_general_like_red"
            android:drawablePadding="8dp"
            app:layout_constraintStart_toStartOf="@+id/layout_wall_attachment_with_text"
            app:layout_constraintTop_toBottomOf="@+id/layout_wall_attachment_with_text" />

        <TextView
            android:id="@+id/tv_wall_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            tools:text="99"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:drawableLeft="@drawable/ic_general_comment_blue"
            android:drawablePadding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wall_item_like"
            app:layout_constraintEnd_toStartOf="@+id/tv_wall_item_repost"
            app:layout_constraintStart_toEndOf="@+id/tv_wall_item_like" />

        <TextView
            android:id="@+id/tv_wall_item_repost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            tools:text="99"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:drawableLeft="@drawable/ic_general_repost_blue"
            android:drawablePadding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_wall_item_comment"
            app:layout_constraintEnd_toEndOf="@+id/layout_wall_attachment_with_text" />

        <LinearLayout
            android:id="@+id/layout_wall_attachment_with_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_wall_item_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_wall_item_date">

            <TextView
                android:id="@+id/tv_wall_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_spacing_4dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_wall_item_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_wall_item_date"
                tools:text="Текст какой-то тестовый и длинный. Самый длинный. Для верстки." />

            <ImageView
                android:id="@+id/iv_wall_item_image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_wall_item_text"
                app:layout_constraintTop_toBottomOf="@+id/tv_wall_item_text"
                tools:srcCompat="@drawable/ic_launcher_background" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/general_spacing_16dp"
            android:background="@color/colorDividerGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_wall_item_comment" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>