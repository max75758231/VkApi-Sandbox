<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ImageView
        android:id="@+id/iv_profile_ava"
        android:layout_width="@dimen/profile_iv_size"
        android:layout_height="@dimen/profile_iv_size"
        android:layout_marginStart="@dimen/general_spacing_16dp"
        android:layout_marginTop="@dimen/general_spacing_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_profile_first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_spacing_16dp"
        android:layout_marginTop="@dimen/general_spacing_16dp"
        android:layout_marginEnd="@dimen/general_spacing_8dp"
        android:text="Константин"
        android:textColor="@color/colorProfileName"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_ava"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_spacing_16dp"
        android:layout_marginEnd="@dimen/general_spacing_8dp"
        android:text="Константинович"
        android:textSize="@dimen/profile_name_font_size"
        android:textStyle="bold"
        android:textColor="@color/colorProfileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_ava"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_first_name" />

    <TextView
        android:id="@+id/tv_profile_online"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_spacing_16dp"
        android:layout_marginTop="@dimen/general_spacing_8dp"
        android:layout_marginEnd="@dimen/general_spacing_8dp"
        android:text="Была 20 сентября в 22.22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_ava"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_last_name" />

    <TextView
        android:id="@+id/tv_profile_bdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_spacing_16dp"
        android:layout_marginTop="@dimen/general_spacing_8dp"
        android:layout_marginEnd="@dimen/general_spacing_8dp"
        android:text="22.01.1999"
        android:textSize="@dimen/profile_bdate_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_ava"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_online" />

    <TextView
        android:id="@+id/tv_profile_hometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_spacing_16dp"
        android:layout_marginTop="@dimen/general_spacing_8dp"
        android:text="Город: Комсомольск-на-Амуре"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_profile_ava"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_bdate" />

    <LinearLayout
        android:id="@+id/layout_profile_progressbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>